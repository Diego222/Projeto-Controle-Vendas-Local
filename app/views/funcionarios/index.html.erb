<%= form_tag funcionarios_path, :method => 'get', :id => "items_search" do %>
  <p>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Procurar", :nome => nil %>
    </div>
      </div>
    </div>
  </p>
<% end %>

<div class="panel panel-default">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Cargo</th> 
            <th>Cidade</th>
            <th>Admissão</th>
            <th>Ações</th>
          </tr>
        </thead>

        <tbody>
          <% @funcionarios.each do |funcionario| %>
              <td><%= funcionario.nome %></td>
              <td><%= funcionario.cargo %></td>
              <td><%= funcionario.cidade %></td>
              <td><%= funcionario.admissao %></td>            
              <td><%= link_to 'Detalhes', edit_funcionario_path(funcionario) %> | <%= link_to 'Excluir', funcionario, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="panel-body">
        <%= will_paginate @funcionarios, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>

    <div class="col-sm-12">
      <%= link_to 'Novo Funcionário', new_funcionario_path, :class => "btn btn-success btn-lg active" %>
    </div>