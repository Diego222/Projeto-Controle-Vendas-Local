<% unless @sale.funcionario.blank? %>
	<h4 class="text-primary">
		<span class="glyphicon glyphicon-user"></span> Funcion√°rio
	</h4>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Cargo</th>
        </tr>
      </thead>

      <tbody>
        <%= fields_for @sale do |f|%>
          <%= f.fields_for :funcionario, Funcionario.find(@sale.funcionario.id) do |e| %>
            <tr>
              <td><%= e.text_field :nome, :class => "form-control", :placeholder => "Nome", :readonly => true %></td>
              <td><%= e.text_field :cargo, :class => "form-control", :placeholder => "Cargo", :readonly => true %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

<% end %>