<% unless @sale.customer.blank? %>
	<h4 class="text-primary">
		<span class="glyphicon glyphicon-user"></span> Cliente
	</h4>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Sobrenome</th>
        </tr>
      </thead>

      <tbody>
        <%= fields_for @sale do |f|%>
          <%= f.fields_for :customer, Customer.find(@sale.customer.id) do |e| %>
            <tr>
              <td><%= e.text_field :nome, :class => "form-control", :placeholder => "Nome", :readonly => true %></td>
              <td><%= e.text_field :sobrenome, :class => "form-control", :placeholder => "Sobrenome", :readonly => true %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

<% end %>