<div class="make_payment">
	<h4 class="text-primary"><span class="glyphicon glyphicon-usd"></span> Adicionar Pagamento</h4>
	<hr />
	<%= form_for :payments, :url => url_for(:controller => "payments", :action => "make_payment"), :method => "get", :remote => true do |f| %>
		<label>Tipo</label>
		<%= f.select :payment_type, [['Cartão de Crédito', 'Cartão de Crédito'], ['Dinheiro', 'Dinheiro'], ['Cheque', 'Cheque'], ['Outros', 'Outros']], {}, { :class => "form-control" } %>
		<label>Valor</label>
		<%= f.text_field :amount, :class => "form-control", :placeholder => "Amount", :value => @sale.remaining_balance %>
		<%= f.hidden_field :sale_id, :value => @sale.id %>
		<br />
		<%= submit_tag "Realizar Pagamento", :class => "btn btn-primary btn-lg" %>
	<% end %>
</div>