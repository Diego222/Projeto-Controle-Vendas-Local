<%= form_tag pedidos_path, :method => 'get', :id => "items_search" do %>
  <p>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Procurar", :pedido => nil %>
    </div>
      </div>
    </div>
  </p>
<% end %>

<div class="panel panel-default">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Fornecedor</th>
            <th>Data</th>
            <th>Pedido</th>
            <th>Ações</th>
          </tr>
        </thead>

        <tbody>
          <% @pedidos.each do |pedido| %>
              <td><%= pedido.fornecedor.empresa %></td>
              <td><%= pedido.created_at.strftime("%d-%m-%Y")%></td>
              <td><%= pedido.pedido %></td>
              <td><%= link_to 'Detalhes', edit_pedido_path(pedido) %> | <%= link_to 'Excluir', pedido, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="panel-body">
        <%= will_paginate @pedidos, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>

    <div class="col-sm-12">
      <%= link_to 'Novo Pedido', new_pedido_path, :class => "btn btn-success btn-lg active" %>
    </div>