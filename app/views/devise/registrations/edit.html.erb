<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <% if @usuario.errors.any? %>
    <div id="error_explanation">
    Há erros no formulário, por favor verifique.
    </div>
    <% end %>

  <%= f.label :email, :class => 'control-label' %>
  <%= f.email_field :email, :class => 'form-control', autofocus: true %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.label :password, "Nova senha", :class => 'control-label' %>
  <%= f.password_field :password, :class => 'form-control', autocomplete: "off" %>

  <%= f.label :password_confirmation, "Confirmar senha", :class => 'control-label' %><br />
  <%= f.password_field :password_confirmation, :class => 'form-control', autocomplete: "off" %>

  <div><%= f.label :current_password, "Senha atual", :class => 'control-label' %> <i>(É necessário para efetuar a alteração)</i><br />
    <%= f.password_field :current_password, :class => 'form-control', autocomplete: "off" %></div>
    <br>

  <div><%= f.submit "Atualizar", :class => 'btn btn-primary' %></div>
<% end %>

<h3>Cancelar minha conta</h3>

<p> <%= button_to "Cancelar",  registration_path(resource_name), :class => "btn btn-warning", data: { confirm: "Você tem certeza?" }, method: :delete %></p>
  
<%= link_to t('.back', :default => t("helpers.links.voltar")),
            :back, :class => 'btn btn-default' %>
