<h2>Alterar senha</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <% if @usuario.errors.any? %>
    <div id="error_explanation">
    Há erros no formulário, por favor verifique.
    </div>
    <% end %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, "Nova senha", :class => 'control-label' %><br />
    <%= f.password_field :password, :class => 'form-control', autofocus: true, autocomplete: "off" %></div>

  <div><%= f.label :password_confirmation, "Confirme a nova senha", :class => 'control-label' %><br />
    <%= f.password_field :password_confirmation, :class => 'form-control', autocomplete: "off" %></div>
    <br>

  <div><%= f.submit "Alterar senha", :class => 'btn btn- btn-primary' %></div>
  <br>
<% end %>


