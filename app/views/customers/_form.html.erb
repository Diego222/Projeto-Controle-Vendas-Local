
<%= form_for(@customer) do |f| %>
    <% if @customer.errors.any? %>
    <div id="error_explanation">
    Há erros no formulário, por favor verifique.
    </div>
    <% end %>

  <div class="panel panel-default">
  <div class="panel-heading">Cliente</div>
  <div class="panel-body">

      <div class="row">
        <div class="col-sm-6">
          <label>Nome</label>
          <%= f.text_field :nome, :class => "form-control", :placeholder => "Nome" %>
          <%= error_tag @customer, :nome %>
        </div>
        <div class="col-sm-6">
          <label>Sobrenome</label>
          <%= f.text_field :sobrenome, :class => "form-control", :placeholder => "Sobrenome" %>
          <%= error_tag @customer, :sobrenome %>
        </div>
      </div>

        <div class="row">
          <div class="col-sm-6">
            <label>Telefone</label>
            <%= f.text_field :phone_number, :class => "campo_telefone form-control", :placeholder => "Telefone" %>
            <%= error_tag @customer, :phone_number %>
          </div>
          <div class="col-sm-6">
            <label>Email</label>
            <%= f.text_field :email_address, :class => "form-control", :id =>  "exampleInputEmail1", :placeholder => "email@example.com" %>
            <%= error_tag @customer, :email_address %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <label>Endereço</label>
            <%= f.text_field :address, :class => "form-control", :placeholder => "Endereço" %>
          </div>
          <div class="col-sm-6">
            <label>Cidade</label>
            <%= f.text_field :city, :class => "form-control", :placeholder => "Cidade" %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <label>Estado</label>
            <%= f.select(:state, (['', 'AC', 'AL', 'AP', 'AM', 'BA', 'CE', 'DF', 'ES', 'GO', 'MA', 'MG', 'MT', 'MS','PA', 'PB', 'PR', 'PE', 'PI', 'RJ', 'RN', 'RS', 'RO', 'RR', 'SC', 'SP', 'SE', 'TO']), {}, :class => 'form-control' ) %>
          </div>
          <div class="col-sm-6">
            <label>Cep</label>
            <%= f.text_field :zip, :class => "campo_cep form-control", :placeholder => "99.999-999" %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <%= f.submit 'Cadastrar', :class => "btn btn-success btn-lg" %>
          </div>
        </div>
      <% end %>
  </div>
</div> 
